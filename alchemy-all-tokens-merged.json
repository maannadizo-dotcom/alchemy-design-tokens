{
  "$schema": "https://schemas.tokens.studio/schema.json",
  "$metadata": {
    "brand": "Alchemy",
    "description": "Unified design tokens: core, emotion, motion, components",
    "version": "2.0",
    "engine": "tokens-studio",
    "updated": "2025-10-17"
  },
  "$themes": [
    {
      "id": "theme-clarity",
      "name": "Emotion/Clarity",
      "selectedTokenSets": {
        "core": "source",
        "emotion/clarity": "enabled"
      }
    },
    {
      "id": "theme-focus",
      "name": "Emotion/Focus",
      "selectedTokenSets": {
        "core": "source",
        "emotion/focus": "enabled"
      }
    },
    {
      "id": "theme-reflection",
      "name": "Emotion/Reflection",
      "selectedTokenSets": {
        "core": "source",
        "emotion/reflection": "enabled"
      }
    },
    {
      "id": "theme-resolve",
      "name": "Emotion/Resolve",
      "selectedTokenSets": {
        "core": "source",
        "emotion/resolve": "enabled"
      }
    },
    {
      "id": "theme-transformation",
      "name": "Emotion/Transformation",
      "selectedTokenSets": {
        "core": "source",
        "emotion/transformation": "enabled"
      }
    }
  ],
  "core": {
    "$description": "Neutral, typography, spacing, radii, shadows",
    "color": {
      "neutral": {
        "light": {
          "$type": "color",
          "$value": "#F7F9FA"
        },
        "mid": {
          "$type": "color",
          "$value": "#E0E4E6"
        },
        "dark": {
          "$type": "color",
          "$value": "#101820"
        }
      },
      "accent": {
        "primary": {
          "$type": "color",
          "$value": "#CBB5E8"
        },
        "secondary": {
          "$type": "color",
          "$value": "#9FBEE5"
        }
      }
    },
    "typography": {
      "hero": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Satoshi",
          "fontWeight": "600",
          "fontSize": "56px",
          "lineHeight": "110%",
          "letterSpacing": "-0.5%"
        }
      },
      "heading": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter",
          "fontWeight": "500",
          "fontSize": "32px",
          "lineHeight": "130%"
        }
      },
      "body": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter",
          "fontWeight": "400",
          "fontSize": "16px",
          "lineHeight": "160%"
        }
      },
      "microcopy": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter",
          "fontWeight": "400",
          "fontSize": "13px",
          "lineHeight": "150%"
        }
      }
    },
    "radius": {
      "base": {
        "$type": "borderRadius",
        "$value": "12px"
      },
      "card": {
        "$type": "borderRadius",
        "$value": "16px"
      },
      "button": {
        "$type": "borderRadius",
        "$value": "8px"
      }
    },
    "spacing": {
      "unit": {
        "$type": "spacing",
        "$value": "8px"
      },
      "xs": {
        "$type": "spacing",
        "$value": "4px"
      },
      "sm": {
        "$type": "spacing",
        "$value": "8px"
      },
      "md": {
        "$type": "spacing",
        "$value": "16px"
      },
      "lg": {
        "$type": "spacing",
        "$value": "24px"
      },
      "xl": {
        "$type": "spacing",
        "$value": "40px"
      }
    },
    "shadow": {
      "soft": {
        "$type": "boxShadow",
        "$value": {
          "x": 0,
          "y": 8,
          "blur": 24,
          "spread": 0,
          "color": "rgba(0,0,0,0.04)"
        }
      },
      "medium": {
        "$type": "boxShadow",
        "$value": {
          "x": 0,
          "y": 12,
          "blur": 32,
          "spread": 0,
          "color": "rgba(0,0,0,0.08)"
        }
      }
    }
  },
  "emotion/clarity": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "#C5D7E5"
      },
      "surface": {
        "$type": "color",
        "$value": "{core.color.neutral.light}"
      },
      "text": {
        "$type": "color",
        "$value": "{core.color.neutral.dark}"
      },
      "primary": {
        "$type": "color",
        "$value": "#C5D7E5"
      },
      "accent": {
        "$type": "color",
        "$value": "{core.color.accent.secondary}"
      }
    },
    "gradient": {
      "background": {
        "$type": "gradient",
        "$value": "linear-gradient(180deg, #C5D7E5 0%, #F7F9FA 100%)"
      }
    }
  },
  "emotion/focus": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "#9FBEE5"
      },
      "surface": {
        "$type": "color",
        "$value": "{core.color.neutral.light}"
      },
      "text": {
        "$type": "color",
        "$value": "{core.color.neutral.dark}"
      },
      "primary": {
        "$type": "color",
        "$value": "#9FBEE5"
      },
      "accent": {
        "$type": "color",
        "$value": "{core.color.accent.secondary}"
      }
    },
    "gradient": {
      "background": {
        "$type": "gradient",
        "$value": "linear-gradient(180deg, #9FBEE5 0%, #C5D7E5 100%)"
      }
    }
  },
  "emotion/reflection": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "#A9B8BA"
      },
      "surface": {
        "$type": "color",
        "$value": "{core.color.neutral.light}"
      },
      "text": {
        "$type": "color",
        "$value": "{core.color.neutral.dark}"
      },
      "primary": {
        "$type": "color",
        "$value": "#A9B8BA"
      },
      "accent": {
        "$type": "color",
        "$value": "{core.color.accent.primary}"
      }
    }
  },
  "emotion/resolve": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "#CBB5E8"
      },
      "surface": {
        "$type": "color",
        "$value": "{core.color.neutral.light}"
      },
      "text": {
        "$type": "color",
        "$value": "{core.color.neutral.dark}"
      },
      "primary": {
        "$type": "color",
        "$value": "#CBB5E8"
      },
      "accent": {
        "$type": "color",
        "$value": "{core.color.accent.secondary}"
      }
    },
    "effect": {
      "focusGlow": {
        "$type": "boxShadow",
        "$value": {
          "x": 0,
          "y": 0,
          "blur": 12,
          "spread": 0,
          "color": "rgba(203,181,232,0.40)",
          "type": "innerShadow"
        }
      }
    }
  },
  "emotion/transformation": {
    "color": {
      "background": {
        "$type": "color",
        "$value": "{emotion/resolve.color.background}"
      },
      "surface": {
        "$type": "color",
        "$value": "{core.color.neutral.light}"
      },
      "text": {
        "$type": "color",
        "$value": "{core.color.neutral.dark}"
      }
    },
    "gradient": {
      "background": {
        "$type": "gradient",
        "$value": "linear-gradient(180deg, #C5D7E5 0%, #CBB5E8 100%)"
      }
    }
  },
  "component": {
    "button": {
      "primary": {
        "$type": "composition",
        "$value": {
          "fill": "{emotion/clarity.color.primary}",
          "textColor": "{emotion/clarity.color.text}",
          "radius": "{core.radius.button}",
          "paddingY": "{core.spacing.sm}",
          "paddingX": "{core.spacing.md}",
          "shadow": "{core.shadow.soft}"
        }
      },
      "accent": {
        "$type": "composition",
        "$value": {
          "fill": "{core.color.accent.primary}",
          "textColor": "{core.color.neutral.dark}",
          "radius": "{core.radius.button}",
          "paddingY": "{core.spacing.sm}",
          "paddingX": "{core.spacing.md}",
          "shadow": "{core.shadow.medium}"
        }
      }
    },
    "card": {
      "base": {
        "$type": "composition",
        "$value": {
          "fill": "{emotion/clarity.color.surface}",
          "textColor": "{emotion/clarity.color.text}",
          "radius": "{core.radius.card}",
          "shadow": "{core.shadow.soft}",
          "padding": "{core.spacing.lg}"
        }
      }
    },
    "input": {
      "field": {
        "$type": "composition",
        "$value": {
          "fill": "{core.color.neutral.light}",
          "textColor": "{core.color.neutral.dark}",
          "radius": "{core.radius.base}",
          "paddingY": "{core.spacing.sm}",
          "paddingX": "{core.spacing.md}",
          "borderColor": "{core.color.neutral.mid}"
        }
      },
      "focus": {
        "$type": "composition",
        "$value": {
          "borderColor": "{emotion/resolve.color.primary}",
          "shadow": "{emotion/resolve.effect.focusGlow}"
        }
      }
    },
    "typography": {
      "hero": {
        "$type": "typography",
        "$value": "{core.typography.hero}"
      },
      "heading": {
        "$type": "typography",
        "$value": "{core.typography.heading}"
      },
      "body": {
        "$type": "typography",
        "$value": "{core.typography.body}"
      },
      "microcopy": {
        "$type": "typography",
        "$value": "{core.typography.microcopy}"
      }
    }
  },
  "motion": {
    "duration": {
      "base": {
        "$type": "duration",
        "$value": "200ms"
      },
      "page": {
        "$type": "duration",
        "$value": "400ms"
      },
      "emotionShift": {
        "$type": "duration",
        "$value": "600ms"
      }
    },
    "easing": {
      "easeOut": {
        "$type": "cubicBezier",
        "$value": [
          0.25,
          0.1,
          0.25,
          1
        ]
      },
      "easeInOut": {
        "$type": "cubicBezier",
        "$value": [
          0.42,
          0,
          0.58,
          1
        ]
      },
      "breath": {
        "$type": "cubicBezier",
        "$value": [
          0.2,
          0.8,
          0.3,
          1
        ]
      }
    },
    "presets": {
      "enterFade": {
        "$type": "composition",
        "$value": {
          "duration": "{motion.duration.base}",
          "easing": "{motion.easing.easeOut}",
          "opacityFrom": 0,
          "opacityTo": 1
        }
      },
      "pageTransition": {
        "$type": "composition",
        "$value": {
          "duration": "{motion.duration.page}",
          "easing": "{motion.easing.easeInOut}",
          "type": "opacity+position"
        }
      },
      "emotionShift": {
        "$type": "composition",
        "$value": {
          "duration": "{motion.duration.emotionShift}",
          "easing": "{motion.easing.breath}",
          "type": "crossfade+color"
        }
      }
    }
  }
}